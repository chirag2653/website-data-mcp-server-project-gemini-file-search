{
  "name": "website-data-mcp-server",
  "version": "1.0.0",
  "description": "Monorepo for website data MCP server and web UI",
  "private": true,
  "type": "module",
  "scripts": {
    "mcp:dev": "pnpm -C apps/mcp-server dev",
    "mcp:build": "pnpm -C apps/mcp-server build",
    "mcp:start": "pnpm -C apps/mcp-server start",
    "web:dev": "pnpm -C apps/web dev",
    "web:build": "pnpm -C apps/web build",
    "web:start": "pnpm -C apps/web start",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "cleanup": "tsx scripts/cleanup-gemini.ts",
    "cleanup:docs": "tsx scripts/cleanup-gemini.ts --docs-only",
    "list:websites": "tsx scripts/list-websites.ts",
    "test:ingestion": "tsx scripts/test-ingestion.ts",
    "test:indexing": "tsx scripts/test-indexing.ts"
  },
  "devDependencies": {
    "tsx": "^4.19.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
